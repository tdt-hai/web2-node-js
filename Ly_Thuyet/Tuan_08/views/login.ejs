<%- include('header'); -%>

<!-- Default form login -->
<form class="text-center border border-light p-5" action="login" method="POST" style="text-align: center;">

    <p class="h4 mb-4">Đăng nhập</p>

    <!-- Email -->
    <input type="email" id="email" name="email" class="form-control mb-4" placeholder="Email">

    <!-- Password -->
    <input type="password" id="password" name="password" class="form-control mb-4" placeholder="Mật khẩu">

    <!-- Sign in button -->
    <button class="btn btn-info btn-block my- 4" type="submit">Đăng nhập</button>
    <!-- Social login -->
    <p>Đăng nhập với:</p>

    <a href="/auth/facebook" class="mx-2" role="button"><i class="fab fa-facebook-f light-blue-text"></i></a>
</form>
